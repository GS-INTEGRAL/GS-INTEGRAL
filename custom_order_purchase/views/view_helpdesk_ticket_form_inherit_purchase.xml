<?xml version="1.0" encoding="utf-8"?>
  <odoo>
  <record id="view_helpdesk_ticket_form_inherit" model="ir.ui.view">
    <field name="name">helpdesk.ticket.form.inherit</field>
    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page string="Productos relacionados">
                <field name="purchase_order_ids">
                    <tree>
                        <field name="product_id"/>
                        <field name="product_qty"/>
                        <field name="taxes_id"/>
                    </tree>
                    <form>
                        <group>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="taxes_id"/>
                        </group>
                        <footer>
                            <button name="action_create_purchase_order" string="Crear Orden de Compra" type="object" class="oe_highlight"/>
                            <button string="Cancelar" class="btn-secondary" special="cancel"/>
                        </footer>
                    </form>
                </field>
            </page>
        </xpath>
    </field>
</record>
    
