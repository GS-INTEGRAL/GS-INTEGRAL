<?xml version="1.0" encoding="utf-8"?>
  <odoo>
    
  <record id="view_helpdesk_ticket_form_inherit_purchase" model="ir.ui.view">
      <field name="name">helpdesk.ticket.form.inherit.purchase</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
      <field name="arch" type="xml">                 
           <xpath expr="//sheet/notebook" position="inside">
              <page string="Pedido de material">
                    <group>
                      <field name="product_id"/>
                      <field name="product_qty"/>
                      <field name="purchase_order_id" readonly="1"/>
                      <button name="action_create_draft_purchase_order"
                              string="Pedido"
                              type="object"
                              class="btn-primary"/>
                    </group>
                </page>
            </xpath> 
        </field>
    </record>       
  </odoo>