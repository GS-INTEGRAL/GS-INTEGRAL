<odoo>
    <record id="view_helpdesk_ticket_form_inherit" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="sede"/>
                    <field name="lugar"/>
                    <field name="fecha_fin"/>
                    
            </xpath>
            <xpath expr="//field[@name='email_cc']" position="after">
                    <field name="prioridad" />
                    <field name="categoria"/>
                    <field name="satisfaccion"/>
            </xpath>             
            <xpath expr="//sheet/notebook" position="inside">
                  <page string="Sede">
                        <group>
                            <field name="sede_imagen" widget="image" filename="sede_imagen_filename"/>
                        </group>
                    </page>
                    <page string="Lugar">
                        <group>
                            <field name="lugar_incidencia_imagen" widget="image" filename="lugar_incidencia_imagen_filename"/>
                        </group>
                    </page>
                    <page string="Sobre la ReparaciÃ³n">
                        <group>                            
                            <field name="comentario_reparacion"/>
                            <field name="material_name"/>
                            <field name="quantity"/>
                            <field name="model"/>
                            <field name="attachment"/>
                        </group>
                    </page> 
                    <page string="Observaciones del Mantenimiento">
                        <group>
                            <field name="observacion_mantenimiento"/>
                        </group>
                    </page>                     
            </xpath>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tree_inherit" model="ir.ui.view">
    <field name="name">helpdesk.ticket.tree.inherit</field>
    <field name="model">helpdesk.ticket</field>  
    <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/> 
    <field name="arch" type="xml">
        <tree>
            <field name="email" optional="show"/>
            <field name="fecha_fin" optional = "show"/>
            <field name="prioridad" optional = "show"/>
            <field name="satisfaccion" optional = "show"/>
        </tree>
    </field>
</record>
</odoo>
