<odoo>
    <record id="view_helpdesk_ticket_form_inherit" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="obras" 
                   invisible="not is_maristas"
                   groups="custom_helpdesk.group_maristas"/>
                <field name="estanciasid" 
                    invisible="not is_maristas"
                    groups="custom_helpdesk.group_maristas"/>

                <field name="obra_secundaria" 
                   invisible="is_maristas"
                   groups="custom_helpdesk.group_non_maristas"/>
                <field name="estancia_id" 
                    invisible="is_maristas"
                    groups="custom_helpdesk.group_non_maristas"/>
                <!-- <field name="is_maristas" invisible="0"/>
                <field name="obras"/>
                <field name="estanciasid"/>
                <field name="obra_secundaria"/>
                <field name="estancia_id"/>  -->
                <field name="fecha_fin"/>
            </xpath>
            <xpath expr="//field[@name='email_cc']" position="after">
                    <field name="categoria"/>
                    <field name="images" widget="many2many_binary" options="{'filename': 'attachment_name'}"/>
            </xpath>     
            
        </field>
    </record>

    <record id="group_maristas" model="res.groups">
        <field name="name">Maristas</field>
    </record>

    <record id="group_non_maristas" model="res.groups">
        <field name="name">Non-Maristas</field>
    </record>

    <record id="view_helpdesk_ticket_tree_inherit" model="ir.ui.view">
    <field name="name">helpdesk.ticket.tree.inherit</field>
    <field name="model">helpdesk.ticket</field>  
    <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/> 
    <field name="arch" type="xml">
        <tree>
            <field name="fecha_fin" optional = "show"/>            
        </tree>
    </field>
</record>


</odoo>
