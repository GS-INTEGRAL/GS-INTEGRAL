<odoo>
    <record id="view_helpdesk_ticket_form_inherit" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='tag_ids']" position="after">
                <div class="o_dynamic_fields">
                    <!-- Campos para Maristas -->
                    <div class="o_maristas_fields o_field_group">
                        <field name="obras" modifiers="{'invisible': [('partner_id.company_id.name', '!=', 'Maristas')]}"/>
                        <field name="estanciasid" modifiers="{'invisible': [('partner_id.company_id.name', '!=', 'Maristas')]}"/>
                    </div>
                    <!-- Campos para otras compañías -->
                    <div class="o_other_company_fields o_field_group">
                        <field name="obra_secundaria" modifiers="{'invisible': [('partner_id.company_id.name', '=', 'Maristas')]}"/>
                        <field name="estancia_id" modifiers="{'invisible': [('partner_id.company_id.name', '=', 'Maristas')]}"/>
                    </div>
                </div>
                <field name="fecha_fin"/>                 
            </xpath>
            <xpath expr="//field[@name='email_cc']" position="after">
                    <field name="categoria"/>
                    <field name="images" widget="many2many_binary" options="{'filename': 'attachment_name'}"/>
            </xpath>     
            
        </field>
    </record>

    <record id="view_helpdesk_ticket_tree_inherit" model="ir.ui.view">
    <field name="name">helpdesk.ticket.tree.inherit</field>
    <field name="model">helpdesk.ticket</field>  
    <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/> 
    <field name="arch" type="xml">
        <tree>
            <field name="fecha_fin" optional = "show"/>            
        </tree>
    </field>
</record>


</odoo>
