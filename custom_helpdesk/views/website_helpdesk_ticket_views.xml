<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Heredando la vista del formulario de tickets del módulo website_helpdesk -->
    <template id="ticket_submit_form_inherit_custom_fields" inherit_id="website_helpdesk.ticket_submit_form">
        <xpath expr="//form/div[@class='s_website_form_rows row s_col_no_bgcolor']" position="inside">
            
            <!-- Campo Sede -->
            <div class="mb-0 py-2 s_website_form_field col-12" data-type="char" data-name="Sede">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_sede">
                        <span class="s_website_form_label_content">Sede</span>
                    </label>
                    <div class="col-sm">
                        <input type="text" class="form-control s_website_form_input" name="sede" id="helpdesk_sede"/>
                    </div>
                </div>
            </div>
            
            <!-- Campo Categoría -->
            <div class="mb-0 py-2 s_website_form_field col-12" data-type="selection" data-name="Categoría">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_categoria">
                        <span class="s_website_form_label_content">Categoría</span>
                    </label>
                    <div class="col-sm">
                        <select class="form-control s_website_form_input" name="categoria" id="helpdesk_categoria">
                            <option value="bricolage">Bricolaje</option>
                            <option value="fontaneria">Fontanería</option>
                            <option value="climatizacion">Climatización</option>
                            <option value="electricidad">Electricidad</option>
                            <!-- Añadir más opciones de categoría aquí -->
                        </select>
                    </div>
                </div>
            </div>

            <!-- Campo Prioridad -->
            <div class="mb-0 py-2 s_website_form_field col-12" data-type="selection" data-name="Prioridad">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_prioridad">
                        <span class="s_website_form_label_content">Prioridad</span>
                    </label>
                    <div class="col-sm">
                        <select class="form-control s_website_form_input" name="prioridad" id="helpdesk_prioridad">
                            <option value="alta">Alta</option>
                            <option value="media">Media</option>
                            <option value="baja">Baja</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Campo Estado -->
            <div class="mb-0 py-2 s_website_form_field col-12" data-type="selection" data-name="Estado">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_estado">
                        <span class="s_website_form_label_content">Estado</span>
                    </label>
                    <div class="col-sm">
                        <select class="form-control s_website_form_input" name="estado" id="helpdesk_estado">
                            <option value="abierta">Abierta</option>
                            <option value="cerrado">Cerrado</option>
                            <option value="en_proceso">En Proceso</option>
                            <option value="baja">Baja</option>
                            <option value="derivada">Derivada</option>
                        </select>
                    </div>
                </div>
            </div>

        </xpath>
    </template>
</odoo>
