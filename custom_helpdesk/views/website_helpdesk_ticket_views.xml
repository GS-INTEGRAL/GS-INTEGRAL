<odoo>
    <template id="portal_helpdesk_form_inherit" inherit_id="website_helpdesk.team_form_1">
        <xpath expr="//input[@name='partner_email']" position="after">
            <!-- Campo Sede -->
            <div class="mb-0 py-2 s_website_form_field col-12" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_sede">
                        <span class="s_website_form_label_content">Sede</span>
                    </label>
                    <div class="col-sm">
                        <input type="text" class="form-control s_website_form_input" name="sede" id="helpdesk_sede" readonly="1" t-att-value="sede"/>
                    </div>
                </div>
            </div>
            <!-- Campo Lugar -->
            <div class="mb-0 py-2 s_website_form_field col-12" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_lugar">
                        <span class="s_website_form_label_content">Lugar</span>
                    </label>
                    <div class="col-sm">
                        <input type="text" class="form-control s_website_form_input" name="lugar" id="helpdesk_lugar" readonly="1" t-att-value="lugar"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>