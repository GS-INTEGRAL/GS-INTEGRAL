<odoo>
    <template id="portal_helpdesk_form_inherit" inherit_id="website_helpdesk.team_form_1">
        <xpath expr="//div[@class='form-group o_website_helpdesk_form_partner_id']" position="after">
            <div class="form-group">
                <label for="sede">Sede</label>
                <input type="text" name="sede" t-att-value="ticket.sede" readonly="1" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="lugar">Lugar</label>
                <input type="text" name="lugar" t-att-value="ticket.lugar" readonly="1" class="form-control"/>
            </div>
        </xpath>
    </template>
</odoo>
