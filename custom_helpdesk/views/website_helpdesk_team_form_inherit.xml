<odoo>
    <data>
        <!-- Registro de la vista heredada -->
        <record id="website_helpdesk_ticket_submit_form_inherit" model="ir.ui.view">
            <field name="name">website.helpdesk.ticket.submit.form.inherit</field>
            <field name="model">ir.ui.view</field>
            <!-- Aquí indicamos que estamos heredando la vista con t-name="website_helpdesk.ticket_submit_form" -->
            <field name="inherit_id" ref="website_helpdesk.ticket_submit_form"/>
            <field name="arch" type="xml">
                <!-- Añadir el campo "Prioridad" antes del campo descripción -->
                <xpath expr="//textarea[@name='description']" position="before">
                    <div class="mb-0 py-2 s_website_form_field col-12" data-type="selection" data-name="priority">
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_priority">
                                <span class="s_website_form_label_content">Priority</span>
                            </label>
                            <div class="col-sm">
                                <select name="priority" id="helpdesk_priority" class="form-control s_website_form_input">
                                    <option value="0">Low priority</option>
                                    <option value="1">Medium priority</option>
                                    <option value="2">High priority</option>
                                    <option value="3">Urgent</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
