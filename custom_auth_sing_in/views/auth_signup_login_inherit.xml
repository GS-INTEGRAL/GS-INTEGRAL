<odoo>
    <template id="auth_signup_login_inherit" inherit_id="auth_signup.fields">
    <xpath expr="//div[@class='mb-3 field-name']" position="after">
        <!-- Campo Sede/Obra -->
        <div class="mb-3 field-obra_id">
            <label for="obra_id">Sede/Obra</label>
            <select name="obra_id" id="obra_id" class="form-control">
                <option value="">Seleccione...</option>
                <t t-foreach="obra_options" t-as="obra">
                    <option t-att-value="obra[0]"><t t-esc="obra[1]"/></option>
                </t>
            </select>
        </div>

        <!-- Campo Obra Secundaria -->
        <div class="mb-3 field-obra_secundaria" t-if="obra_id == 'maristas'">
            <label for="obra_secundaria">Obra Secundaria</label>
            <select name="obra_secundaria" id="obra_secundaria" class="form-control">
                <option value="">Seleccione...</option>
                <t t-foreach="obra_secundaria_options" t-as="secundaria">
                    <option t-att-value="secundaria[0]"><t t-esc="secundaria[1]"/></option>
                </t>
            </select>
        </div>

        <!-- Campo Estancia -->
        <div class="mb-3 field-estancia_id">
            <label for="estancia_id">Estancia/Cap√≠tulo</label>
            <select name="estancia_id" id="estancia_id" class="form-control">
                <option value="">Seleccione...</option>
                <t t-foreach="estancia_options" t-as="estancia">
                    <option t-att-value="estancia[0]"><t t-esc="estancia[1]"/></option>
                </t>
            </select>
        </div>
    </xpath>
</template>

<template id="extend_assets_frontend" inherit_id="web.assets_frontend" name="Include Signup Custom JS">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/your_module_name/static/src/js/signup_custom.js"></script>
        </xpath>
</template>

</odoo>
