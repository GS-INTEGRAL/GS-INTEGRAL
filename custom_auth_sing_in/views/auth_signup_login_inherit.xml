<odoo>
    <template id="auth_signup_login_inherit" inherit_id="auth_signup.fields">
        <xpath expr="//div[@class='mb-3 field-name']" position="after">
            <!-- Campo obra_id -->
            <div class="mb-3 field-obra_id">
                <label for="obra_id">Sede/Obra</label>
                <input name="obra_id" type="text" id="obra_id" class="form-control" t-att-value="request.params.get('obra_id') or ''"/>
            </div>
            <!-- Campo estancia_id -->
            <div class="mb-3 field-estancia_id">
                <label for="estancia_id">Estancia/Capitulo</label>
                <input name="estancia_id" type="text" id="estancia_id" class="form-control" t-att-value="request.params.get('estancia_id') or ''"/>
            </div>
        </xpath>
    </template>
</odoo>
