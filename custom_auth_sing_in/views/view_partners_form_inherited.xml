<odoo>
    <data>
        <record id="view_partner_form_inherit_obra" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.obra</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="obra_id" options="{'no_create_edit': False}" context="{'default_estancias_ids': []}"/>
                    <field name="obra_secundaria_id" options="{'no_create_edit': False}" context="{'default_estancias_ids': []}"/>
                    <field name="estancia_id" options="{'no_create_edit': False}" context="{'default_sede_id': obra_id}"/>
                    <!-- <field name="obra_id" id="obra_id"/>
                    <field name="obra_secundaria" id="obra_secundaria"/>
                    <field name="estancia_id" id="estancia_id"/> -->
                </xpath>
            </field>
        </record>
    </data>
</odoo>
