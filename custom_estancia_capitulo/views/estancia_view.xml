<odoo>
    <record id="view_estancia_form" model="ir.ui.view">
        <field name="name">estancias.capitulo.form</field>
        <field name="model">estancias.capitulo</field>
        <field name="arch" type="xml">
            <form string="Estancia">
                <sheet>
                    <group>
                        <field name="estancia"/>
                        <field name="plano" widget="image"/>
                        <field name="obra_id"/>
                        <field name="partner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estancia_kanban" model="ir.ui.view">
    <field name="name">estancias.capitulo.kanban</field>
    <field name="model">estancias.capitulo</field>
    <field name="arch" type="xml">
        <kanban class="o_kanban_example">
            <field name="estancia"/>
            <field name="plano" widget="image"/>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click o_kanban_record">
                        <div class="o_kanban_image">
                            <img t-att-src="kanban_image('estancias.capitulo', 'plano', record.id)" 
                                 t-att-title="record.estancia.value" 
                                 class="img img-fluid"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong><t t-esc="record.estancia.value"/></strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_estancia_tree" model="ir.ui.view">
        <field name="name">estancias.capitulo.tree</field>
        <field name="model">estancias.capitulo</field>
        <field name="arch" type="xml">
            <tree string="Estancias">
                <field name="estancia"/>
                <field name="plano" widget="image"/>
            </tree>
        </field>
    </record>

   
    <record id="action_estancias" model="ir.actions.act_window">
        <field name="name">Estancias</field>
        <field name="res_model">estancias.capitulo</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>


<menuitem id="menu_estancias_capitulo" name="Estancias CapÃ­tulo" parent="base.menu_custom" sequence="10"/>
<menuitem id="submenu_estancias" name="Estancias" parent="menu_estancias_capitulo" action="custom_estancia_capitulo.action_estancias"/>


</odoo>